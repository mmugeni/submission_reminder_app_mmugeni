#!/bin/bash
# create_environment.sh
# Script to set up the submission_reminder_app environment

# Ask for your name
read -p "Enter your name: " NAME
DIR_NAME="submission_reminder_${NAME}"

# Create directory structure
mkdir -p "$DIR_NAME/config" "$DIR_NAME/modules" "$DIR_NAME/assets"

# Create image.png placeholder
echo "[Placeholder for image.png]" > "$DIR_NAME/image.png"

# Create config/config.env (provided content)
cat > "$DIR_NAME/config/config.env" << 'EOF'
# This is the config file
ASSIGNMENT="Shell Navigation"
DAYS_REMAINING=2
EOF

# Create modules/functions.sh (provided content)
cat > "$DIR_NAME/modules/functions.sh" << 'EOF'
#!/bin/bash
# Function to read submissions file and output students who have not submitted

function check_submissions {
 local submissions_file=$1
 echo "Checking submissions in $submissions_file"
 # Skip the header and iterate through the lines
 while IFS=, read -r student assignment status; do
   # Remove leading and trailing whitespace
   student=$(echo "$student" | xargs)
   assignment=$(echo "$assignment" | xargs)
   status=$(echo "$status" | xargs)
   # Check if assignment matches and status is 'not submitted'
   if [[ "$assignment" == "$ASSIGNMENT" && "$status" == "not submitted" ]]; then
     echo "Reminder: $student has not submitted the $ASSIGNMENT assignment!"
   fi
 done < <(tail -n +2 "$submissions_file") # Skip the header
}
EOF
chmod +x "$DIR_NAME/modules/functions.sh"

# Create assets/submissions.txt (provided + 5 more)
cat > "$DIR_NAME/assets/submissions.txt" << 'EOF'
student, assignment, submission status
Chinemerem, Shell Navigation, not submitted
Chiagoziem, Git, submitted
Divine, Shell Navigation, not submitted
Anissa, Shell Basics, submitted
Moulaika, Shell Navigation, submitted
Fatima, Git, not submitted
Idris, Shell Basics, submitted
Khadija, Shell Navigation, submitted
Jean, Git, submitted
Aisha, Shell Basics, not submitted
EOF

# Create reminder.sh (provided content)
cat > "$DIR_NAME/reminder.sh" << 'EOF'
#!/bin/bash
# Source environment variables and helper functions
source ./config/config.env
source ./modules/functions.sh

# Path to the submissions file
submissions_file="./assets/submissions.txt"

# Print remaining time and run the reminder function
echo "Assignment: $ASSIGNMENT"
echo "Days remaining to submit: $DAYS_REMAINING days"
echo "--------------------------------------------"
check_submissions $submissions_file
EOF
chmod +x "$DIR_NAME/reminder.sh"

# Create startup.sh (your implementation)
cat > "$DIR_NAME/startup.sh" << 'EOF'
#!/bin/bash
echo "Starting the Submission Reminder App..."
bash ./reminder.sh
EOF
chmod +x "$DIR_NAME/startup.sh"

echo "Environment setup complete!"
echo "Run ./startup.sh inside $DIR_NAME to start the app."
